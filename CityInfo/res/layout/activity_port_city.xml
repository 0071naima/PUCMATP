<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chittagong"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Port City of Bangladesh"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#642435" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chittagong is the second-largest city and main seaport of Bangladesh. It is located in the southeastern region of the country, at the mouth of the Karnaphuli River, straddling hilly terrain and facing the Bay of Bengal."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <Button
        android:id="@+id/portcity"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:text="learn more..." />

</LinearLayout>
