<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhaka"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capital City of Bangladesh"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#652352" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dhaka is the capital city of Bangladesh and the tenth largest city in the world. It has an estimated population of more than 15.5 million people in the Greater Dhaka Area."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12sp" />

    <Button
        android:id="@+id/capitalcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="learn more..." />

</LinearLayout>
